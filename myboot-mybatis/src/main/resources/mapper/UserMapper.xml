<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ranger.mybootmybatis.user.mapper.UserMapper" >
    <sql id="BASE_TABLE">
    user
  </sql>

    <sql id="BASE_COLUMN">
    id,name,age,creation_date,last_update_date,version_number
  </sql>

    <insert id="insert" parameterType="com.ranger.mybootmybatis.user.dao.User">
        INSERT INTO
        <include refid="BASE_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                name,
            </if>
            <if test="age != null">
                age,
            </if>
            creation_date,
            last_update_date,
            version_number
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name},
            </if>
            <if test="age != null">
                #{age},
            </if>
            TIMESTAMP ,
            TIMESTAMP ,
            1
        </trim>
    </insert>

    <select id="selectByPrimaryKey" resultType="com.ranger.mybootmybatis.user.dao.User">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
        where 1=1
        <if test="id != null">
            id = #{id}
        </if>
        <if test="name != null">
            name = #{name}
        </if>
        <if test="age != null">
            age = #{age}
        </if>
    </select>

    <select id="selectAll" resultType="com.ranger.mybootmybatis.user.dao.User">
        SELECT
        <include refid="BASE_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
    </select>
</mapper>
